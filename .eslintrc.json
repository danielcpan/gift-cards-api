{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier" ],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier":  ["error", {
      "semi": true,
      "arrowParens": "avoid",
      "singleQuote": true,
      "printWidth": 100,
      "tabWidth": 2,
      "trailingComma": "none"
    }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["api"]
      }
    }
  }
}